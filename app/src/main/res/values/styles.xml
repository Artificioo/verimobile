<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent.Light</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/blueButton</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="textColorError">@color/errorColor</item>

    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#2c2c2d</item>
        <item name="colorPrimaryDark">#1c1c1d</item>
        <item name="colorButtonNormal">#606060</item>
        <item name="android:windowBackground">@color/darkWindowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">

        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Light" parent="@style/AppTheme.Light">

        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
